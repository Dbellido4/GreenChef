<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona los alimentos que prefieres:"
            android:gravity="center"
            android:textSize="24sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <CheckBox
                android:id="@+id/chk_proteinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proteínas"/>

            <CheckBox
                android:id="@+id/chk_vegetales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vegetales"/>

            <CheckBox
                android:id="@+id/chk_cereales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cereales"/>

            <CheckBox
                android:id="@+id/chk_frutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frutas"/>

            <CheckBox
                android:id="@+id/chk_lacteos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lácteos"/>

            <CheckBox
                android:id="@+id/chk_frutos_secos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frutos secos"/>

            <CheckBox
                android:id="@+id/chk_granos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Granos"/>

            <CheckBox
                android:id="@+id/chk_postres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postres"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textColor="@color/white"
            android:background="@color/verde01"
            android:layout_margin="16dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>