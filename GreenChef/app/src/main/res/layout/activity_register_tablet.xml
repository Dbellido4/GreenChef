<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register_activities.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/rlHeader">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/logoapp"/>
    </RelativeLayout>

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/rlHeader"
        android:layout_width="520dp"
        android:layout_height="880dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_right_panel"/>

    <LinearLayout
        android:id="@+id/llBotones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/shape_login_panel"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textSize="80dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <EditText
                    android:id="@+id/Username"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="@drawable/custom_editext"
                    android:layout_marginTop="60dp"
                    android:padding="8dp"
                    android:hint="Username"
                    android:textSize="25sp"
                    android:textColorHint="@color/white"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:textColor="@color/white"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="@drawable/custom_editext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Correo Electronico"
                    android:textSize="25sp"
                    android:textColorHint="@color/white"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:textColor="@color/white"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:background="@drawable/custom_editext"
                    android:layout_marginTop="20dp"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:hint="ContraseÃ±a"
                    android:textSize="25sp"
                    android:textColorHint="@color/white"
                    android:drawablePadding="8dp"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnInicioSesion"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="Sign Up"
                    android:textSize="30sp"
                    android:textColor="@color/verde03"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_marginRight="200dp"
            android:text="Login"
            app:layout_constraintTop_toTopOf="@+id/llBotones"/>

        <TextView
            android:id="@+id/txtRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_marginRight="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="-30dp"
            android:text="Sign Up" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>